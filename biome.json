{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"build",
			"node_modules",
			"coverage",
			"package.json",
			"scripts",
			"*.json"
		]
	},
	"linter": {
		"rules": {
			"all": true,
			"correctness": {
				"noNodejsModules": "off"
			},
			"style": {
				"noDefaultExport": "off"
			}
		}
	}
}
